#!/bin/sh

[ "$1" = "main" ] && xrandr --output DVI-D-0 --off --rotate normal --output HDMI-0 --off --output DP-0 --refresh 144 --primary --mode 1920x1080 --rotate normal --output DP-1 --off --output HDMI-1 --off --output DP-2 --off --output DP-3 --off && exit

[ "$(uname -n)" = "battlestation" ] && xrandr --output DVI-D-0 --mode 1920x1080 --pos 0x1080 --rotate normal --output HDMI-0 --off --output DP-0 --refresh 144 --primary --mode 1920x1080 --pos 1920x1080 --rotate normal --output DP-1 --off --output HDMI-0 --mode 1920x1080 --pos 1920x0 --rotate normal --output DP-2 --off --output DP-3 --off

